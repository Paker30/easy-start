{
  "name": "generator-easy-start",
  "version": "1.0.0",
  "description": "Minimal configuration to start from scratch",
  "main": "index.js",
  "files": [
    "generators"
  ],
  "scripts": {
    "commit": "cz"
  },
  "keywords": [
    "yeoman-generator",
    "scaffolding"
  ],
  "author": "Francisco Moreno <morenocfrancisco86@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "yeoman-generator": "^5.6.1"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
